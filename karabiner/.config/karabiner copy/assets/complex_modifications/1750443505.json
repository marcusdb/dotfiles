{
  "title": "Capslock Mode",
  "maintainers": [
    "Titancube"
  ],
  "author": "https://github.com/Titancube",
  "repo": "https://github.com/Titancube/KE-complex_modifications",
  "rules": [
    {
      "description": "Capslock to Hyper",
      "manipulators": [
        {
          "description": "Click to Capslock, Hold to Hyper",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "Arrows",
      "manipulators": [
        {
          "description": "CapsLock + h = Left arrow",
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "description": "CapsLock + l = Right arrow",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "description": "CapsLock + k = Up arrow",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": []
            }
          ]
        },
        {
          "description": "CapsLock + j = Down arrow",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": []
            }
          ]
        }
      ]
    },
    {
      "description": "Tilde, Swung dash (`, ~)",
      "manipulators": [
        {
          "description": "CapsLock + escape = tilde (`)",
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": []
            }
          ]
        },
        {
          "description": "CapsLock + left shift + escape = Swung dash(~)",
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_command",
                "right_control",
                "right_option",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "shift"
              ]
            }
          ]
        }
      ]
    },
